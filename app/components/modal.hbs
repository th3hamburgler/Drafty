<div
  class="relative z-10 {{if @show '' 'pointer-events-none'}}"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
>

  <div
    class="fixed inset-0 bg-purple transition-opacity ease-in duration-200
      {{if @show 'bg-opacity-75' 'bg-opacity-0 pointer-events-none'}}"
  ></div>

  <div class="fixed inset-0 z-10 overflow-y-auto">
    <div
      class="flex min-h-full items-end justify-center p-4 text-center sm:items-center sm:p-0"
    >

      <div
        class="relative transform ease-in duration-200 overflow-hidden rounded-lg text-white bg-purple text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg ring-4 ring-white ring-opacity-50
          {{if
            @show
            'opacity-100 translate-y-0 sm:scale-100'
            'opacity-0 translate-y-4 sm:translate-y-0 sm:scale-95 pointer-events-none'
          }}"
      >
        <div class="p-6 space-y-2">

          {{yield}}

          <button
            type="button"
            class="absolute top-6 right-6 text-white"
            {{on "click" @close}}
          >{{svg-jar "x-mark" class="w-6 h-6"}}</button>
        </div>
      </div>
    </div>
  </div>
</div>