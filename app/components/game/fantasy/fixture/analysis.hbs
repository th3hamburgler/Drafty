<h2 class="text-xl font-bold">Head to Head</h2>

<table class="w-full">
  <thead>
    <tr>
      <th class="text-left">Game Week</th>
      <th></th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each this.fixtures as |fixture|}}
      <tr>
        <th class="text-xs opacity-70">{{fixture.gameWeek.id}}</th>
        <th
          class="text-xm sm:text-base sm:whitespace-nowrap"
        >{{fixture.home.entry_name}}</th>
        <th class="text-center">{{fixture.league_entry_1_points}}</th>
        <th class="text-center">-</th>
        <th class="text-center">{{fixture.league_entry_2_points}}</th>
        <th
          class="text-xm sm:text-base sm:whitespace-nowrap text-right"
        >{{fixture.away.entry_name}}</th>
      </tr>
    {{/each}}
  </tbody>
</table>