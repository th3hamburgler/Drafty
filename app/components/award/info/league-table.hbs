<h1 class="text-2xl font-bold uppercase">League Table</h1>

<p class="text-opacity-70">Current table for the season.</p>

<table class="w-full">
  <thead>
    <tr class="border-b border-white border-opacity-20">
      <th class="text-left py-2 text-lg font-bold">Team</th>
      <th class="text-right py-2 text-lg font-bold">Points</th>
    </tr>
  </thead>
  <tbody>
    {{#each @totals as |row index|}}
      <tr
        class="border-b border-white border-opacity-20
          {{if (eq index 0) @color}}
          "
      >
        <td class="whitespace-nowrap py-2">
          <div class="text-xl font-bold">{{row.team}}</div>
          <div class="text-sm opacity-70">{{row.manager}}</div>
        </td>
        <td class="text-right py-2 text-2xl font-bold">{{row.total}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>