<h1 class="text-2xl font-bold uppercase">The Lucky Man</h1>

<p class="text-opacity-70">This awards goes to the Team who has faced the least
  amount of opposition player points each week.</p>

<table class="w-full">
  <thead>
    <tr class="border-b border-white border-opacity-20">
      <th>Team</th>
      <th class="text-right py-2 text-lg font-bold">Against</th>
    </tr>
  </thead>
  <tbody>
    {{#each @totals as |row index|}}
      <tr
        class="border-b border-white border-opacity-20
          {{if (eq index 0) 'text-lime'}}
          "
      >
        <td class="whitespace-nowrap py-2">
          <div class="text-xl font-bold">{{row.team}}</div>
          <div class="text-sm opacity-70">{{row.manager}}</div>
        </td>
        <td class="text-right py-2 text-2xl font-bold">{{pluralize
            row.total
            "pt"
          }}</td>
      </tr>
    {{/each}}
  </tbody>
</table>