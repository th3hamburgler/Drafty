{{page-title "Dashboard"}}

<div class="min-h-screen w-full bg-gray-50">

  <nav class="px-6 py-2 bg-purple text-white flex justify-between">
    <h1 class="text-lg uppercase font-bold">Drafty</h1>
    <ul class="text-lg uppercase font-bold flex justify-end gap-12">
      <li>Dashboard</li>
      <li>Match Day</li>
      <li>Transfers</li>
    </ul>
  </nav>

  <main class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 m-6 gap-6">

    {{#each this.awards as |award|}}
      <Card::Award
        @title={{award.title}}
        @icon={{award.icon}}
        @manager={{award.manager}}
        @value={{award.value}}
        @color={{award.color}}
      />
    {{/each}}

  </main>

</div>